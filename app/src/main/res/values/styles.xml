<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="actionMenuTextAppearance">@style/ToolMenuStyle</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_enter_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_enter_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_exit_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_exit_out</item>
    </style>

    <style name="ToolBarTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolMenuStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="divider_black_t_50">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/black_t_50</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@mipmap/shadow_left</item>
        <item name="shadow_right">@mipmap/shadow_right</item>
        <item name="shadow_bottom">@mipmap/shadow_bottom</item>
    </style>

</resources>
